{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES2017",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["dom", "es2016", "es2017"],
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
